{
  "name": "@kraftr/build",
  "version": "0.5.0",
  "description": "",
  "author": "Michel Betancourt",
  "bin": {
    "craft": "bin/craft.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "source": "./src/index.ts"
    },
    "./jest": {
      "import": "./dist/jest.mjs",
      "require": "./dist/jest.cjs",
      "source": "./src/jest.ts"
    },
    "./craft": {
      "import": "./dist/craft.mjs",
      "require": "./dist/craft.cjs",
      "source": "./src/craft/index.ts"
    },
    "./shared/*": {
      "default": "./shared/*"
    }
  },
  "main": "./dist/index.cjs",
  "publishConfig": {
    "access": "public"
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "backend",
    "tooling",
    "typescript",
    "nodejs",
    "framework"
  ],
  "homepage": "https://github.com/kraftrio/kraftr",
  "repository": {
    "directory": "tools/build",
    "type": "git",
    "url": "https://github.com/kraftrio/kraftr"
  },
  "bugs": {
    "url": "https://github.com/kraftrio/kraftr/issues"
  },
  "sideEffects": false,
  "scripts": {
    "build": "vite build --config craft.config.ts -l silent",
    "build:watch": "vite build --config craft.config.ts -l silent",
    "stub": "vite build --config craft.config.ts -l silent",
    "lint": "eslint **/*.ts --ext ts",
    "test": "npm run test:files & npm run test:types",
    "test:watch": "vitest dev --reporter=dot",
    "test:files": "vitest run --reporter=dot",
    "test:types": "tsc --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "@microsoft/api-extractor": "^7.18.0",
    "cac": "^6.7.11",
    "chalk": "^4.1.2",
    "deepmerge": "^4.2.2",
    "esbuild": "^0.14.11",
    "execa": "^5.1.1",
    "fast-glob": "^3.2.7",
    "find-up": "^6.2.0",
    "jiti": "^1.12.9",
    "local-pkg": "^0.4.0",
    "ora": "^6.0.1",
    "rollup": "~2.63.0",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-license": "^2.6.0",
    "soly": "^1.1.0",
    "typescript": "^4.5.2",
    "vite": "^2.7.12",
    "vite-tsconfig-paths": "~3.3.17"
  },
  "devDependencies": {
    "@kraftr/eslint-plugin": "^0.2.3",
    "@types/debug": "^4.1.7",
    "@types/node": "^16.11.7",
    "@types/rollup-plugin-auto-external": "^2.0.2",
    "eslint": "^8.2.0",
    "tslib": "^2.3.1"
  }
}
