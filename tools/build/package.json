{
  "name": "@kraftr/build",
  "version": "0.4.0",
  "description": "",
  "author": "Michel Betancourt",
  "bin": {
    "craft": "bin/craft.mjs"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "source": "./src/index.ts"
    },
    "./jest": {
      "import": "./dist/jest.mjs",
      "require": "./dist/jest.cjs",
      "source": "./src/jest.ts"
    },
    "./craft": {
      "import": "./dist/craft.mjs",
      "require": "./dist/craft.cjs",
      "source": "./src/craft/index.ts"
    }
  },
  "main": "./dist/index.cjs",
  "publishConfig": {
    "access": "public"
  },
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "type": "module",
  "keywords": [
    "backend",
    "tooling",
    "typescript",
    "nodejs",
    "framework"
  ],
  "homepage": "https://github.com/kraftrio/kraftr",
  "repository": {
    "directory": "tools/build",
    "type": "git",
    "url": "https://github.com/kraftrio/kraftr"
  },
  "bugs": {
    "url": "https://github.com/kraftrio/kraftr/issues"
  },
  "sideEffects": false,
  "scripts": {
    "build": "node ./bin/craft.mjs",
    "build:watch": "tsup --format cjs,esm ./src/index.ts ./src/jest.ts --dts-resolve",
    "lint": "eslint **/*.ts --ext ts",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:types": "tsc --noEmit"
  },
  "license": "MIT",
  "dependencies": {
    "debug": "^4.3.2",
    "@types/debug": "^4.1.7",
    "@microsoft/api-extractor": "^7.18.19",
    "rollup-plugin-auto-external": "^2.0.0",
    "rollup-plugin-license": "^2.6.0",
    "deepmerge": "^4.2.2",
    "find-up": "^6.2.0",
    "chalk": "^4.1.2",
    "ora": "^6.0.1",
    "local-pkg": "^0.4.0",
    "vite": "^2.6.14",
    "esbuild": "^0.13.10",
    "cac": "^6.7.11",
    "execa": "^5.1.1",
    "typescript": "^4.4.0",
    "fast-glob": "^3.2.7",
    "rollup": "~2.60.0",
    "vite-tsconfig-paths": "~3.3.17"
  },
  "devDependencies": {
    "@types/rollup-plugin-auto-external": "^2.0.2",
    "@kraftr/eslint-plugin": "workspace:^0.2.0",
    "@types/node": "^16.11.7",
    "@jest/types": "^27.2.5",
    "tslib": "^2.3.1",
    "eslint": "^8.2.0"
  }
}
