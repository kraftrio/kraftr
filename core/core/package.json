{
  "name": "@kraftr/core",
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://github.com/kraftrio/kraftr",
  "repository": {
    "directory": "core/core",
    "type": "git",
    "url": "https://github.com/kraftrio/kraftr"
  },
  "bugs": {
    "url": "https://github.com/kraftrio/kraftr/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "craft build --silent ./src/index.ts",
    "build:watch": "craft build ./src/index.ts",
    "test": "vitest",
    "test:types": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "@kraftr/context": "workspace:^0.1.0",
    "@kraftr/sequence": "workspace:^0.1.0",
    "@kraftr/errors": "workspace:^0.1.4",
    "debug": "^4.3.2",
    "pretty-error": "^3.0.4"
  },
  "devDependencies": {
    "@kraftr/build": "workspace:^0.5.0",
    "@kraftr/eslint-plugin": "workspace:^0.2.3",
    "@types/debug": "^4.1.7",
    "@types/node": "^16.11.7",
    "tslib": "^2.3.1",
    "vitest": "latest",
    "eslint": "^8.2.0"
  }
}
