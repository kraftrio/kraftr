{
  "name": "@kraftr/common",
  "version": "0.1.0",
  "type": "module",
  "homepage": "https://github.com/kraftrio/kraftr",
  "repository": {
    "directory": "core/core",
    "type": "git",
    "url": "https://github.com/kraftrio/kraftr"
  },
  "bugs": {
    "url": "https://github.com/kraftrio/kraftr/issues"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "craft build --silent",
    "build:watch": "craft build --silent --watch",
    "stub": "craft build --silent --stub",
    "test": "npm run test:files && npm run test:types",
    "test:watch": "vitest dev --reporter=dot",
    "test:files": "vitest run --reporter=dot",
    "test:types": "tsc --noEmit"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "dependencies": {
    "picomatch": "^2.3.0",
    "pino": "^7.6.1",
    "ts-toolbelt": "^9.6.0"
  },
  "devDependencies": {
    "@kraftr/build": "workspace:^0.5.0",
    "@kraftr/eslint-plugin": "workspace:^0.2.3",
    "@types/node": "^16.11.7",
    "@types/picomatch": "^2.3.0",
    "eslint": "^8.2.0",
    "tslib": "^2.3.1",
    "vite": "^2.7.12",
    "vitest": "latest"
  }
}
